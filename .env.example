# ============================================================================
# RTGS Sales Automation - Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your API keys
# Required keys are marked with [REQUIRED]
# Optional keys are marked with [OPTIONAL]
# ============================================================================

# ============================================================================
# AI PROVIDERS (Choose One or Both)
# ============================================================================

# Anthropic Claude AI [REQUIRED if AI_PROVIDER=anthropic or not set]
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google Gemini AI [REQUIRED if AI_PROVIDER=gemini]
# Get your API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# AI Provider Selection: 'anthropic' or 'gemini' [OPTIONAL - defaults to 'anthropic']
AI_PROVIDER=anthropic

# ============================================================================
# CRM INTEGRATION - HubSpot
# ============================================================================

# HubSpot API Key [REQUIRED for HubSpot integration]
# Get from: HubSpot → Settings → Integrations → Private Apps
HUBSPOT_API_KEY=your_hubspot_api_key_here

# HubSpot App Configuration [REQUIRED for webhooks]
HUBSPOT_APP_ID=your_app_id_here
HUBSPOT_SIGNATURE_SECRET=your_webhook_signature_secret_here
HUBSPOT_PRIVATE_APP_TOKEN=your_private_app_token_here

# ============================================================================
# EMAIL/OUTREACH PROVIDERS (Choose One)
# ============================================================================

# Email Provider Selection: 'lemlist' or 'postmark' [OPTIONAL - defaults to 'lemlist']
EMAIL_PROVIDER=lemlist

# --- Lemlist (Default) ---
# Lemlist API Key [REQUIRED if EMAIL_PROVIDER=lemlist]
# Get from: https://app.lemlist.com/settings/integrations
LEMLIST_API_KEY=your_lemlist_api_key_here
LEMLIST_WEBHOOK_SECRET=your_lemlist_webhook_secret_here

# --- Postmark (Alternative) ---
# Postmark Server Token [REQUIRED if EMAIL_PROVIDER=postmark]
# Get from: https://account.postmarkapp.com/servers
POSTMARK_API_KEY=your_postmark_server_token_here
POSTMARK_SERVER_TOKEN=your_postmark_server_token_here
POSTMARK_WEBHOOK_SECRET=your_postmark_webhook_secret_here
POSTMARK_SENDER_EMAIL=noreply@yourdomain.com

# ============================================================================
# LINKEDIN PROVIDERS (Choose One)
# ============================================================================

# LinkedIn Provider Selection: 'lemlist' or 'phantombuster' [OPTIONAL - defaults to 'lemlist']
LINKEDIN_PROVIDER=lemlist

# --- LinkedIn Session (Manual) ---
# LinkedIn Session Cookie [OPTIONAL - for direct LinkedIn access]
# Get from: LinkedIn → Browser DevTools → Application → Cookies → li_at
LINKEDIN_SESSION_COOKIE=your_linkedin_session_cookie_here

# --- PhantomBuster (Automation) ---
# PhantomBuster API Key [REQUIRED if LINKEDIN_PROVIDER=phantombuster]
# Get from: https://phantombuster.com/api-store
PHANTOMBUSTER_API_KEY=your_phantombuster_api_key_here
PHANTOMBUSTER_WEBHOOK_SECRET=your_phantombuster_webhook_secret_here

# PhantomBuster Agent IDs [REQUIRED for each LinkedIn action type]
# Create these agents in your PhantomBuster account and copy their IDs here
# Profile Visitor: https://phantombuster.com/phantombuster#search/linkedin%20profile%20visitor
PHANTOMBUSTER_PROFILE_VISITOR_AGENT_ID=your_profile_visitor_agent_id_here
# Auto Connect: https://phantombuster.com/phantombuster#search/linkedin%20auto%20connect
PHANTOMBUSTER_AUTO_CONNECT_AGENT_ID=your_auto_connect_agent_id_here
# Message Sender: https://phantombuster.com/phantombuster#search/linkedin%20message
PHANTOMBUSTER_MESSAGE_SENDER_AGENT_ID=your_message_sender_agent_id_here

# ============================================================================
# DATA ENRICHMENT PROVIDERS
# ============================================================================

# Explorium Enrichment [OPTIONAL]
# Get from: https://www.explorium.ai/
EXPLORIUM_API_KEY=your_explorium_api_key_here

# ============================================================================
# VIDEO GENERATION
# ============================================================================

# Video Provider Selection: 'heygen' [OPTIONAL - defaults to 'heygen']
VIDEO_PROVIDER=heygen

# HeyGen API Key [REQUIRED if VIDEO_PROVIDER=heygen]
# Get from: https://app.heygen.com/settings/api-keys
HEYGEN_API_KEY=your_heygen_api_key_here
HEYGEN_WEBHOOK_SECRET=your_heygen_webhook_secret_here

# ============================================================================
# API SERVER CONFIGURATION
# ============================================================================

# API Server Port [OPTIONAL - defaults to 3000]
API_SERVER_PORT=3000
PORT=3000

# API Authentication Keys (comma-separated list) [REQUIRED for production]
# Generate with: openssl rand -hex 32
API_KEYS=sk_live_your_api_key_here,sk_test_another_key_here

# API Secret Key for JWT signing [REQUIRED for production]
# Generate with: openssl rand -hex 32
API_SECRET_KEY=your_secret_key_for_auth_here

# ============================================================================
# DATABASE CONFIGURATION - PostgreSQL
# ============================================================================

# PostgreSQL Connection [REQUIRED]
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=rtgs_sales_automation
POSTGRES_USER=rtgs_user
POSTGRES_PASSWORD=rtgs_password_dev

# Database URL (alternative format) [OPTIONAL]
# DATABASE_URL=postgresql://rtgs_user:rtgs_password_dev@localhost:5432/rtgs_sales_automation

# ============================================================================
# SSL/HTTPS CONFIGURATION
# ============================================================================

# SSL Certificate Paths [OPTIONAL - enables HTTPS]
# Leave empty to use HTTP only
SSL_KEY_PATH=/path/to/privkey.pem
SSL_CERT_PATH=/path/to/fullchain.pem

# ============================================================================
# RATE LIMITING
# ============================================================================

# Global Rate Limiting [OPTIONAL]
RATE_LIMIT_WINDOW=15        # Window in minutes (default: 15)
RATE_LIMIT_MAX=100          # Max requests per window (default: 100)

# Chat Rate Limiting [OPTIONAL]
# Protects Claude/Gemini API quota
CHAT_RATE_LIMIT_MAX=10      # Max chat messages per minute (default: 10)

# ============================================================================
# AUTOMATION SETTINGS
# ============================================================================

# Auto-enrichment on contact import [OPTIONAL - defaults to false]
AUTO_ENRICH_ON_IMPORT=false

# Auto-sync to CRM after enrichment [OPTIONAL - defaults to false]
AUTO_SYNC_AFTER_ENRICH=false

# ============================================================================
# ENVIRONMENT & LOGGING
# ============================================================================

# Node Environment: 'development', 'production', or 'test' [OPTIONAL - defaults to 'development']
NODE_ENV=development

# Log Level: 'error', 'warn', 'info', 'debug' [OPTIONAL - defaults to 'info']
LOG_LEVEL=info

# ============================================================================
# REDIS (OPTIONAL - for caching and rate limiting)
# ============================================================================

# Redis Connection [OPTIONAL - app works without Redis]
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# ============================================================================
# PROVIDER API URLS (Advanced - usually not needed)
# ============================================================================

# Override default API endpoints [OPTIONAL]
# LEMLIST_API_URL=https://api.lemlist.com/api
# POSTMARK_API_URL=https://api.postmarkapp.com
# PHANTOMBUSTER_API_URL=https://api.phantombuster.com/api/v2
# HEYGEN_API_URL=https://api.heygen.com

# ============================================================================
# TESTING & DEVELOPMENT
# ============================================================================

# Test Mode [OPTIONAL - for local testing]
# TEST_MODE=true

# Mock External APIs [OPTIONAL - for testing without real API keys]
# MOCK_APIS=true
