# RTGS Sales Automation - Environment Variables
# Copy this file to .env and fill in your API keys

# HubSpot CRM
HUBSPOT_API_KEY=your_hubspot_api_key_here

# Lemlist Outreach
LEMLIST_API_KEY=your_lemlist_api_key_here

# Explorium Enrichment (optional)
EXPLORIUM_API_KEY=your_explorium_api_key_here

# Apollo.io (optional)
APOLLO_API_KEY=your_apollo_api_key_here

# LinkedIn (optional)
LINKEDIN_SESSION_COOKIE=your_linkedin_session_cookie_here

# Claude AI (for API server mode)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# API Server Configuration
API_SERVER_PORT=3000
API_SECRET_KEY=your_secret_key_for_auth_here

# Rate Limiting
RATE_LIMIT_WINDOW=15  # Global rate limit window in minutes
RATE_LIMIT_MAX=100    # Max requests per window
CHAT_RATE_LIMIT_MAX=10  # Max chat messages per minute (protects Claude API quota)
